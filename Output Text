   public static String Appleton(int i)
   {
       if (i == 1)
       {
           return "You have entered Appleton" + "\n";
       }
       else if (i == 2)
       {
           return "You have reached the Stairs" + "\n";
       }
       else if (i == 3)
       {
           return "You have reached the first floor" + "\n";
       }
       else if (i == 4)
       {
           return "You have reached the second floor" + "\n";
       }
       else if (i == 5)
       {
           return "You have reached the third floor" + "\n";
       }
       else if (i == 6)
       {
           return "The way is blocked, you must move back" + "\n";   
       }
       return "no" + "\n";
       
   }
